@inherits LayoutComponentBase
@inject ILocalizer Localizer;
@inject ILanguageProvider LanguageProvider;
@inject IAsyncLocalizationProvider LocaleProvider;

<div class="page">
    <div class="sidebar">
        <NavMenu/>
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://docs.microsoft.com/aspnet/" target="_blank">@Localizer["About"]</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code
{
    protected override void OnInitialized()
    {
        LanguageProvider.LanguageUpdated += StateHasChanged;
        LocaleProvider.LocalesUpdated += StateHasChanged;
    }
}
